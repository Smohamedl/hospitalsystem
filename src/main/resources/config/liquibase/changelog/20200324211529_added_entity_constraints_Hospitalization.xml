<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Hospitalization.
    -->
    <changeSet id="20200324211529-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="hospitalization"
                                 constraintName="fk_hospitalization_patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

        <addForeignKeyConstraint baseColumnNames="medical_service_id"
                                 baseTableName="hospitalization"
                                 constraintName="fk_hospitalization_medical_service_id"
                                 referencedColumnNames="id"
                                 referencedTableName="medical_service"/>

    </changeSet>
</databaseChangeLog>
