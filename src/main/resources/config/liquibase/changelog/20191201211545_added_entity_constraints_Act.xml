<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Act.
    -->
    <changeSet id="20191201211545-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="medical_service_id"
                                 baseTableName="act"
                                 constraintName="fk_act_medical_service_id"
                                 referencedColumnNames="id"
                                 referencedTableName="medical_service"/>

        <addForeignKeyConstraint baseColumnNames="doctor_id"
                                 baseTableName="act"
                                 constraintName="fk_act_doctor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="doctor"/>

        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="act"
                                 constraintName="fk_act_patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

        <addForeignKeyConstraint baseColumnNames="receipt_act_id"
                                 baseTableName="act"
                                 constraintName="fk_act_receipt_act_id"
                                 referencedColumnNames="id"
                                 referencedTableName="receipt_act"/>

        <addForeignKeyConstraint baseColumnNames="act_id"
                                 baseTableName="act_actypes"
                                 constraintName="fk_act_actypes_act_id"
                                 referencedColumnNames="id"
                                 referencedTableName="act"/>

        <addForeignKeyConstraint baseColumnNames="actypes_id"
                                 baseTableName="act_actypes"
                                 constraintName="fk_act_actypes_actypes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="actype"/>

        <addForeignKeyConstraint baseColumnNames="payment_method_id"
                                 baseTableName="act"
                                 constraintName="fk_act_payment_method_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_method"/>

    </changeSet>
</databaseChangeLog>
